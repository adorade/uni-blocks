//- includes/contacts/_5.pug
// section-5
section.uni-block.pt-0#contact-5
  .container-fluid.p-0.pb-3
    include ../../misc/_google-map

  .container
    .row.text-center.justify-content-center.pt-5
      .col-12.col-md-7
        h1 Contact Us

    .row.justify-content-center.pt-4
      .col-12.col-md-7
        form(action="#!")
          .row
            .col
              input.form-control(type="email" placeholder="Email")

          .row.mt-4
            .col
              input.form-control(type="text" placeholder="Subject")

          .row.mt-4
            .col
              textarea.form-control(name="message" rows="3" placeholder="How can we help?")
          .row.mt-4
            .col.text-center
              button.btn(type="submit") Submit
    .row-100

  .bg-dark
    .container
      .row-50
      .row.justify-content-center.text-center
        .col-12.col-md.mr-auto.ml-auto
          img.mb-2(alt="image" height="40" src="./images/img_round.svg")
          p.text-h3 +44 (112) 123 752

        .col-12.col-md.pt-4.pt-md-0.mr-auto.ml-auto
          img.mb-2(alt="image" height="40" src="./images/img_round.svg")
          p.text-h3 123 6th St. #[br] Melbourne, FL 32904

        .col-12.col-md.pt-4.pt-md-0.mr-auto.ml-auto
          img.mb-2(alt="image" height="40" src="./images/img_round.svg")
          p.text-h3 support@website.com
      .row-50

  .container
    .row-70
    .row.text-center
      .col
        p.text-h2
          a.mr-4(href="#!"): i.fa.fa-facebook
          a.mr-4(href="#!"): i.fa.fa-twitter
          a.mr-4(href="#!"): i.fa.fa-instagram
          a.mr-4(href="#!"): i.fa.fa-google
          a(href="#!"): i.fa.fa-pinterest
