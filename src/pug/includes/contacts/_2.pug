//- includes/contacts/_2.pug
// section-2
section.uni-block.bg-dark#contact-2(style="background-image: url(./images/bg_0.svg)")
  .container
    .row.text-center.justify-content-center
      .col-12.col-md-8.col-lg-7
        h1 Contact Us
        h2 We love to hear from you!

    .row.pt-4
      .col-12
        form(action="#!")
          .row
            .col-12.col-md
              input.form-control(type="text" placeholder="Name")
            .col-12.col-md.mt-4.mt-md-0
              input.form-control(type="email" placeholder="Email")
            .col-12.col-md.mt-4.mt-md-0
              input.form-control(type="text" placeholder="Phone (optional)")

          .row.mt-4
            .col
              input.form-control(type="text" placeholder="Subject")

          .row.mt-4
            .col
              textarea.form-control(name="message" rows="3" placeholder="How can we help?")

          .row.mt-4
            .col.text-center
              button.btn(type="submit") Submit
